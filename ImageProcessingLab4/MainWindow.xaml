<Window x:Class="ImageProcessingLab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageProcessingLab4"
        mc:Ignorable="d"
        Title="MainWindow"  Width="1536" Height="864"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <Canvas>
            <Button Content="Выбрать изображение" Click="selectedImage_Click" Height="27" Width="250" Canvas.Left="84" Canvas.Top="45" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" BorderBrush="#FFB9B9B9" Background="#FFEDEDED" Foreground="Black"/>
            <Button Content="Преобразование в оттенок серого" Click="transformToGray_Click" Height="27" Width="250" Canvas.Left="84" Canvas.Top="100" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" BorderBrush="#FFB9B9B9" Background="#FFEDEDED" Foreground="Black"/>
            <Button Content="Фильтр определения границ" Click="maska_Click" Height="27" Width="250" Canvas.Left="84" Canvas.Top="151" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" BorderBrush="#FFB9B9B9" Background="#FFEDEDED" Foreground="Black"/>
            <Button Content="Выход" Click="exitProgram_Click" Height="27" Width="250" Canvas.Left="84" Canvas.Top="770" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="14" BorderBrush="#FFB9B9B9" Background="#FFFF8B8B" Foreground="Black"/>

            <Canvas Width="1536" Height="864" Canvas.Left="0" Canvas.Top="0" HorizontalAlignment="Center" VerticalAlignment="Top">

                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="10" 
                    Width="550" Height="372" Canvas.Left="426" Canvas.Top="42" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Image x:Name="selectedImage" Margin="-2,-1,-2,0" RenderTransformOrigin="0.349,0.494" />
                </Border>

                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="10" 
                    Width="550" Height="372" Canvas.Left="976" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="42">
                    <Image x:Name="toGray"  Width="550" Margin="-2,0,-2,-3" />
                </Border>

                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="10" 
                    Width="550" Height="374" Canvas.Left="426" Canvas.Top="436" HorizontalAlignment="Center" VerticalAlignment="Top" >
                    <Image x:Name="contrasting" Width="550" Margin="-2,0,-2,1"/>
                </Border>

                <Border BorderThickness="1" BorderBrush="Black" CornerRadius="10" 
                    Width="550" Height="374" Canvas.Left="976" Canvas.Top="436" HorizontalAlignment="Center" VerticalAlignment="Top">
                    <Image x:Name="maska" Margin="-2,2,-2,-3"/>
                </Border>

            </Canvas>
            <StackPanel HorizontalAlignment="Left" Canvas.Left="84" Canvas.Top="245" VerticalAlignment="Top">
                <TextBlock Text="Диапазон яркости: 0-255" FontWeight="Bold" Width="268" HorizontalAlignment="Center"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Min:" Width="30" VerticalAlignment="Center"/>
                    <Slider x:Name="minSlider" Minimum="0" Maximum="255" Value="0" Width="204"
                ValueChanged="Slider_ValueChanged"/>
                    <TextBlock x:Name="minText" Text="0" Width="25" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBlock Text="Max:" Width="30" VerticalAlignment="Center"/>
                    <Slider x:Name="maxSlider" Minimum="0" Maximum="255" Value="255" Width="205"
                ValueChanged="Slider_ValueChanged"/>
                    <TextBlock x:Name="maxText" Text="255" Width="25" VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="Применить" Click="contrasting_Click" Margin="0,10"/>
            </StackPanel>
            <Label Content="Контрастирование" Canvas.Left="84" Canvas.Top="206" HorizontalAlignment="Center" VerticalAlignment="Top" Width="250" Background="White" HorizontalContentAlignment="Center" FontSize="18"/>
            <Label Content="Исходное изображение" Canvas.Left="560" Width="250" Background="White" HorizontalContentAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Height="37" FontSize="18"/>
            <Label Content="В оттенках серого" Canvas.Left="1138" Width="250" Background="White" HorizontalContentAlignment="Center" Height="37" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label Content="Контрастное изображение" Canvas.Left="560" Width="250" Background="White" HorizontalContentAlignment="Center" Height="37" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="817"/>
            <Label Content="Определения границ" Canvas.Left="1138" Width="250" Background="White" HorizontalContentAlignment="Center" Height="37" FontSize="18" Canvas.Top="817" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>
</Window>
